# App
APP_NAME=IDLock API
DEBUG=true

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/idlock

# Redis
REDIS_URL=redis://localhost:6379

# Vector DB (Pinecone)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENV=us-east-1
PINECONE_INDEX=idlock-characters

# Image Generation (Gemini 2.5 Flash)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash-exp

# LLM for prompts/vectors/summarization (Groq - Free)
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_TEMPERATURE=0.1

# Storage - Local by default (no S3 needed)
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=./uploads

# S3 (Optional - set USE_LOCAL_STORAGE=false to use)
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
